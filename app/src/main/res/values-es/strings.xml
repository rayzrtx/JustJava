<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <string name="app_name">Sólo Java</string>

    <!--Thank you message for the order summary (CHAR limit = none)-->
    <string name="thank_you">"¡Gracias! "</string>

    <!--Header text for the list of toppings (CHAR Limit = 20)-->
    <string name="toppings">Ingredientes</string>

    <!--Text for checkbox to add whipped cream -->
    <string name="whipped_cream">Crema Batida</string>

    <!--Hint text display in the empty field for user's name -->
    <string name="name">Nombre</string>

    <!--Text for checkbox to add chocolate -->
    <string name="chocolate">Chocolate</string>

    <!--Header text for the Quantity of coffees ordered (CHAR Limit = 20)-->
    <string name="quantity">Cantidad</string>

    <!--Text on button to Order coffee -->
    <string name="order_button">Ordenar</string>

    <!--
        Name used for order summary. It will be shown in the format of "Name: Amy" where Amy is name
        that user entered (CHAR limit = none)
    -->
    <string name="order_summary_name">
        Nombre: <xliff:g id="name" example="Amy">%s</xliff:g>
    </string>

    <!--
        Whipped cream topping for the order summary. It will be shown in the format of
        "Add whipped cream? true" or "Add whipped cream? false". [CHAR LIMIT=NONE]
      -->
    <string name="order_summary_whipped_cream">
        ¿Agregue la crema batida? <xliff:g id="addWhippedCream" example="true">%b</xliff:g>
    </string>

    <!--
        Chocolate topping for the order summary. It will be shown in the format of
        "Add chocolate? true" or "Add chocolate? false". [CHAR LIMIT=NONE]
      -->
    <string name="order_summary_chocolate">
        ¿Agregue el chocolate? <xliff:g id="addChocolate" example="true">%b</xliff:g>
    </string>

    <!--
      Quantity of coffee cups for the order summary. It will be shown in the format of
      "Quantity: 2", where 2 is the number of cups ordered. [CHAR LIMIT=NONE]
    -->
    <string name="order_summary_quantity">
        Cantidad: <xliff:g id="quantity" example="2">%d</xliff:g>
    </string>

    <!--
      Total price for the order summary. It will be shown in the format of
      "Total: $10" where $10 is the price. [CHAR LIMIT=NONE]
    -->
    <string name="order_summary_price">
        Precio total: $<xliff:g id="price" example="$10">%d</xliff:g>
    </string>

    <!--
      Subject line for the order summary email. It will be in the format of
      "Just Java order for Amy" where Amy is the user's name. [CHAR LIMIT=NONE]
    -->
    <string name="order_summary_email_subject_line">
        Sólo Java para <xliff:g id="userName" example="Amy">%s</xliff:g>
    </string>

    <!--Text for Toast message when quantity is more than 100 -->
    <string name="over_100_coffees_toast">No puedes pedir más de 100 cafés</string>

    <!--Text for Toast message when quantity is less than 1 -->
    <string name="less_than_1_coffee_toast">No puedes pedir menos de un café</string>
</resources>